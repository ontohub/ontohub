%center
  = 'New to Ontohub? Sign up!'
- @user = User.new
= simple_form_for @user, :url => user_registration_path, html: { class:'form-horizontal' } do |f|
  
  = f.input_field :name, class: 'form-control', required: true, placeholder: 'Name', style: 'margin: 0 0 2px;'
  %div.input-group
  = f.input_field :email, type: 'email', pattern: '[^@]*@[^@]*', class: 'form-control', required: true, placeholder: 'E-mail', style: 'margin: 0 0 2px;'
  %div.input-group
    = f.input_field :password, class: 'form-control', required: true, placeholder: 'Password'
    %span.input-group-btn
      %input.btn.btn-primary{type: 'submit', value: 'Sign Up'}
