%h2 Recently Updated Repositories

.pull-right
  = link_to 'Browse Repositories', repositories_path, class: 'btn btn-primary', type: 'button'

- @repositories.each do |repository|
  %div
    = fancy_link repository
    = timestamp repository.updated_at

%h2 Recently Updated #{Settings.OMS.pluralize.capitalize}

.pull-right
  = link_to "Browse #{Settings.OMS.pluralize.capitalize}", ontologies_path, class: 'btn btn-primary', type: 'button'

- @versions.each do |version|
  %ol.ontology-list
    %li.ontology-list-item
      = fancy_link version.ontology
      - if version.pusher
        by
        = fancy_link version.pusher
      = timestamp version
