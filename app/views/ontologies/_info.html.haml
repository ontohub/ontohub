%table.info
  %tr
    %td URI
    %td= resource.uri
  
  %tr
    %td Name
    %td= resource.name?? resource.name : '-'
  
  %tr
    %td Logic
    %td= resource.logic
  
  %tr
    %td Owner
    %td
      - for owner in resource.permissions.owner
        = link_to owner.subject, owner.subject, 'data-type' => owner.subject_type
  %tr
    %td Created
    %td
      = timestamp resource
  
  - if resource.versions_count > 0
    %tr
      %td Updated
      %td= timestamp resource.versions.last_updated_at
  
  %tr
    %td Hets status
    %td= status resource
  - if resource.versions.done.any?
    %tr
      %td
      %td= link_to 'Download', download_path(resource), class: 'btn'
