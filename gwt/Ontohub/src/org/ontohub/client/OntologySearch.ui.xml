<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:o="urn:import:org.ontohub.client">
	<ui:style>
	    @external .gwt-SuggestBoxPopup .item .item-selected, .input-group, .form-control, .input-group-btn, .btn, .btn-primary, .glyphicon, .glyphicon-search;
	    .input-group, .form-control, .input-group-btn, .btn, .btn-primary, .glyphicon, .glyphicon-search {};
	    .gwt-SuggestBoxPopup {
	      background-color: white;
	      border: 1px solid #cccccc;
	      border-radius: 4px;
	      padding: 4px 3px;
	      z-index: 3;
        }
        .gwt-SuggestBoxPopup table tbody tr td {
	      padding: 0;
	      border: 0 none;
        }
        .gwt-SuggestBoxPopup table tbody tr td.item {
	      background-color: white;
	      padding: 1px 4px;
        }
        .gwt-SuggestBoxPopup table tbody tr td.item-selected {
	      background-color: rgb(233,211,134);
	      cursor: pointer;
        }
		.container {
          background-color: rgba(0, 0, 0, 0);
          border-collapse: separate;
          box-sizing: border-box;
          color: rgb(51, 51, 51);
          display: table;
          font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
          font-size: 14px;
          height: 45px;
          line-height: 20px;
          margin-bottom: 10px;
          position: relative;
          width: 665px;
		}
        .bar:focus {
	      outline: 0px none!important;
        }
        .conceptPanel {
          display: block;
          float: left;
        }
        input[type="text"].box {
	      display: inline-block;
	      font-size: 14px;
	      font-weight: bold;
	      padding: 3px 8px;
	      line-height: 14px;
	      height: 20px;
	      width: auto;
          outline: 0px none!important;
          border: 0px none!important;
          box-shadow: none;
          -webkit-box-shadow: none;
        }
        input[type="text"].box:focus {
          outline: 0px none!important;
          border: 0px none!important;
          box-shadow: none;
          -webkit-box-shadow: none;
        }
        .nobreak {
          white-space: nowrap;
          height: 20px;
        }
	</ui:style>
	<g:FlowPanel>
	  <g:FlowPanel styleName="input-group">
	    <g:FocusPanel styleName="form-control" ui:field="bar">
	      <g:FlowPanel styleName="{style.nobreak}">
	        <g:FlowPanel styleName="{style.conceptPanel}" ui:field="conceptPanel"/>
	        <g:SuggestBox styleName="{style.box}" ui:field="box"/>
	      </g:FlowPanel>
	    </g:FocusPanel>
	    <g:SimplePanel styleName="input-group-btn">
	      <g:SimplePanel styleName="btn btn-primary">
	        <g:InlineLabel styleName="glyphicon glyphicon-search" />
	      </g:SimplePanel>
	    </g:SimplePanel>
	  </g:FlowPanel>
	  <o:Pagination ui:field="pagination" />
	  <g:FlowPanel ui:field="ontologyWidgetPanel"></g:FlowPanel>
	</g:FlowPanel>
</ui:UiBinder> 